<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <!-- For Page Submit -->  
    
    <definition extends="layout" name="/menulist">
        <put-attribute name="content" value="menulist" />
         <put-attribute name="menu" value="/WEB-INF/pages/menu/menu.jsp" />
    </definition>
    
     <definition extends="layout" name="/adslist">
        <put-attribute name="content" value="adslist" />
        <put-attribute name="menu" value="/WEB-INF/pages/menu/menu.jsp" />
    </definition>
    <!-- For AJAX -->
   
    <definition name="menulist" template="/WEB-INF/pages/menu/list.jsp">
    </definition>
    
    <definition name="menuadd" template="/WEB-INF/pages/menu/save.jsp">
    </definition>
    
    <definition name="promotionsadd" template="/WEB-INF/pages/menu/promotions.jsp">
    </definition>
    
     <definition name="adslist" template="/WEB-INF/pages/menu/adslist.jsp">
    </definition>
    
</tiles-definitions>
